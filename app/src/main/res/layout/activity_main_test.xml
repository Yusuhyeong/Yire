<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.MainTestActivity">

    <TextView
        android:id="@+id/tv_api_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수검색 API 호출"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오 로그인"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_api_test" />

    <TextView
        android:id="@+id/tv_binding_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이터 바인딩"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_test" />

    <TextView
        android:id="@+id/tv_popup_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팝업"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_binding_test" />

</androidx.constraintlayout.widget.ConstraintLayout>